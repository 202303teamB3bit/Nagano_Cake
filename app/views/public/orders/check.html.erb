
<div class="container">
  <h1 class="my-4">注文情報確認</h1>

  <table class="confirmation-table">
    <thead>
      <%= @order.payment_method_i18n %>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td class="text-right"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
          <td class="text-right"><%= cart_item.quantity %></td>
          <td class="text-right"><%= cart_item.subtotal.to_s(:delimited) %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="3" class="text-right">送料</td>
        <!--<td class="text-right"><%#= number_to_currency(@order.shipping_fee) %></td>-->
      </tr>
      <tr>
        <td colspan="3" class="text-right">合計金額</td>
        <!--<td class="text-right"><%#= number_to_currency(@order.total_price) %></td>-->
      </tr>
      <tr>
        <td colspan="3" class="text-right">請求金額</td>
        <!--<td class="text-right"><%#= number_to_currency(@order.billing_amount) %></td>-->
      </tr>
    </tbody>
  </table>

  <h2>お支払い方法</h2>
  <p><%= @order.payment_method %></p>

  <h2>お届け先</h2>
  <p>
    <%= @order.post_code %><br>
    <%= @order.address %><br>
    <%= @order.name %>
  </p>

  <!--<%#= link_to '戻る', new_order_path, class: 'btn btn-secondary mr-2' %>-->
  <!--<%#= link_to '注文を確定する', check_order_path(@order), method: :post, class: 'btn btn-primary' %>-->
</div>

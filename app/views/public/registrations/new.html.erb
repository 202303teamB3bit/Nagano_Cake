<div class="col-sm-8 mx-auto mt-5">
  <div>
    <h3 class="mt-1 mb-3">新規会員登録</h3>
    <div class="row g-3">
      <div class="col-md-6">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <%= f.label :first_name, "(姓)", :class => "form-label" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "令和", :class => "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.label :last_name, "(名)", :class => "form-label" %>
        <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "道子", :class => "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.label :first_name_kana, "(セイ)" %>
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "レイワ", :class => "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.label :last_name_kana, "(メイ)" %>
        <%= f.text_field :last_name_kana, autocomplete: "first_name_kana", placeholder: "ミチコ", :class => "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.label :emai, "メールアドレス" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", :class => "form-control" %>
      </div>
    </div>
    <div class="row g-3">
      <div class="col-md-6">
        <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :post_code, autocomplete: "post_code", placeholder: "0000000", :class => "form-control" %>
      </div>
    </div>
    <div class="row g-3">
      <div class="col-md-12">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", :class => "form-control" %>
      </div>
    </div>
    <div class="row g-3">
      <div class="col-md-6">
        <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
        <%= f.text_field :phone_number,  autocomplete: "phone_number", placeholder: "00000000000", :class => "form-control" %>
      </div>
    </div>
    <div class="row g-3">
      <div class="col-md-6">
        <%= f.label :password, "パスワード(6文字以上)" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
      </div>
    </div>
    <div class="row g-3">
      <div class="col-md-6">
        <%= f.label :password_confirmation, "パスワード(確認用)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
      </div>
    </div>
    <div class="mt-3"></div>
    <div class="actions md-3">
      <%= f.submit "新規登録", :class => "btn btn-dark btn-lg btn-block" %>
    </div>
    <% end %>
  </div>
</div>



<div class="container">
  <h2><%= @genre.name %>の商品一覧</h2>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text">価格: <%= item.price %>円</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

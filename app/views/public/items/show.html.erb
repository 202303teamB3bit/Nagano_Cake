<div class="container">
  <div class="row">

   <div class="col-2 mx-auto">
    <table class="table table-borderless">
     <thead>
      <tr>
       <th>ジャンル検索</th>
      </tr>
     </thead>
     <tbody>
      <% @items.each do |item| %>
      <tr>
       <td><%= item.genre_id %></td>
      </tr>
      <% end %>
     </tbody>
    </table>
   </div>

   <div class="col-3 mx-auto">
    <%= image_tag @item.get_image(200, 200) %>
   </div>

   <div class="col-5 mx-auto">
     <h2 class="font-weight-bold"><%= @item.name %></h2>
     <p><%= @item.introduction %></p>
     <p>
      <strong style="font-size: 25px">¥ <%= @item.with_tax_price.to_s(:delimited) %></strong>
      (税込)
     </p>
     <div>
      <%= form_with model:@cart_item, url: cart_items_path, method: :post do |f| %>
       <%= f.hidden_field :customer_id, :value => current_customer.id %>
       <%= f.hidden_field :item_id, :value => @item.id %>
       <div class="d-flex justify-content-between" style="width:250px">
        <%= f.select :quantity, *[1..10], { :include_blank => '個数選択' } %>
        <%= f.submit "カートに入れる", class: "btn btn-sm btn-success" %>
       </div>
      <% end %>
     </div>

   </div>
  </div>
</div>
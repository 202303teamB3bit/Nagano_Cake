<div class="container">
  <h2>会員情報編集</h2>
    <div class="">
      <div>


      <%= form_with model:@customer, url: customers_info_path do |f| %>

        <div class="row form-group">
          <p class="col-md-2">氏名</p>
          <div class="col-md-3"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></div>
          <div class="col-md-4"><%= f.text_field :last_name, autocomplete: "last_name" %></div>
        </div>

        <div class="row form-group">
          <p class="col-md-2"> フリガナ</p>
          <div class="col-md-3"><%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %></div>
          <div class="col-md-4"><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %></div>
        </div>

        <div class="row form-group">
          <p class="col-md-2">郵便番号</p>
          <div class="col-md-3"><%= f.text_field :post_code, autocomplete: "post_code" %></div>
        </div>

        <div class="row form-group">
          <p class="col-md-2">住所</p>
          <div class="col-md-3"><%= f.text_field :address, autocomplete: "address" %></div>
        </div>

        <div class="row form-group">
          <p class="col-md-2">電話番号</p>
          <div class="col-md-3"><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></div>
        </div>

        <div class="row form-group">
          <p class="col-md-2">メールアドレス</p>
          <div class="col-md-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>

        <div class="row form-group">
          <p class="col-md-2"></p>
          <div class="col-md-3"><%= f.submit "編集内容を保存"%></div>
        </div>

      <% end %>
    </div>
  </div>
</div>
<div class="text-center mb-5"></div>

<div class = "container" >
  <div class = "row" >
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2 class="font-weight-bold col-3 ml-4 mb-4 text-nowrap">マイページ</h2>

      <div class="d-flex flex-row">
        <p class="mr-2"><strong>登録情報</p></strong>
        <P class="ml-3"><%= link_to '編集する', customers_info_edit_path, class: "btn btn-sm btn-success" %></P>
      </div>

      <table class="table">
        <tr>
          <td>氏名</td>
          <td><%= @customer.first_name%>　<%= @customer.last_name%></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>

      <table>
        <tr>
          <th style="width: 30%">配送先</th>
          <td style="width: 40%"><%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-info" %></td>
        </tr>
        <tr>
          <th style="width: 30%">注文履歴</th>
          <td style="width: 40%"><%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-info" %></td>
        </tr>
      </table>

    </div>
  </div>
</div>

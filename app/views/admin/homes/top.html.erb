<div class="container">
  <h2>注文履歴一覧</h2>
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @orders.each do |order| %>
            <td>
              <%= link_to root_path do %>
                <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
              <% end %>
            </td>
            <td><%= order.customer.name %></td>
            <td><%= order.order_detail.count %></td>
            <td><%= order.status %></td>
          <% end %>
        </tr>

      </tbody>
    </table>
  </div>
</div>
<div class="text-center mb-5"></div>

<div class="container">
  <h3 class="font-weight-bold col-3 ml-4 mb-4 text-nowrap">注文履歴一覧</h3>
  <div class="row">
    <table class="table table-striped table-hover">
      <thead class="table-danger">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %>
          </td>
          <td>
            <%= link_to order.customer.full_name, admin_path(order.customer.id) %>
          </td>
          <td>
            <% quantity = 0%>
            <% order.order_details.each do |order_detail| %>
              <% quantity += order_detail.quantity  %>
            <% end %>
            <%= quantity %>
          </td>
          <td><%= order.status_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <div class="mx-auto"><%= paginate @orders %></div>
  </div>
</div>

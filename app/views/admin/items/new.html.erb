<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
      <h3>商品新規登録</h3>
      <%= form_with model: @item, url: admin_items_path, method: :post  do |f| %>
        <div class="form-group">
          <%= f.label :image, '商品画像' %>
          <%= f.file_field :image, accept: "image/*", class: "form-control-file user_image" %>
        </div>
        <div class="form-group">
          <%= f.label :name, '商品名' %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, '商品説明' %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :genre_id, 'ジャンル' %>
          <%= f.select :genre_id, Genre.all.map{|o| [o.name, o.id]}, { include_blank: "--選択してください--" } %>
          <%#= f.select :genre_id, [['ケーキ', 1], ['焼き菓子', 2]], { include_blank: "--選択してください--" }, { id: "user_id", class: "user_class" } %>
        </div>
        <div class="form-group">
      <!--税抜価格,数字の指定する？？-->
          <%= f.label :price, '税抜価格' %>
          <%= f.text_field :price %>
        </div>
        <div class="form-group">
          <%= f.label :is_active_sale, '販売中' %>
          <%= f.radio_button :is_active, :sale %>
          <%= f.label :is_active_discontinued, '販売停止中' %>
          <%= f.radio_button :is_active, :discontinued %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

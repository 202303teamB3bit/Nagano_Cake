<%= form_with url: items_path, method: :get, local: true, class: "d-flex" do |f| %>
  <%= f.search_field :name, class: "form-control me-2", placeholder: "キーワードから探す", aria: { label: "Search" } %>
  <%= f.submit "検索", class: "btn btn-outline-success" %>
<% end %>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col'>
      <h4>商品一覧</h4>
      <div class="text-right">
        <%= link_to new_admin_item_path, class: "btn btn-{themecolor}.rounded-circle.p-0", method: :get do %>
        <i class="fas fa-plus"></i>
        <% end %>
      </div>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price.to_s(:delimited)  %></td>
            <td><%= item.genre ? item.genre.name : "N/A" %></td>
            <td><%= item.is_active_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>

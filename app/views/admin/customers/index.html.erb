<div class="text-center mb-5"></div>

<div class="container">
  <h3 class="font-weight-bold col-3 ml-4 mb-4 text-nowrap">会員一覧</h3>

<div class="table-responsive table-hover">
  <table class="table table-hover">
    <thead class="table-danger">
      <tr>
        <th scope="col">会員ID</th>
        <th scope="col">氏名</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>

<tbody>
  <% @customers.each do |customer| %>
  <tr>
    <td class="h5"><%= customer.id %></td>
    <td class="h5">
      <%= link_to admin_customer_path(customer), class:'text-reset h5', style:"text-decoration: underline" do %>
      <%= customer.full_name %>
      <% end %>
    </td>
    <td class="h5"><%= customer.email %></td>
    <% if customer.is_deleted == false %>
    <td class="font-weight-bold text-success h5">有効</td>
    <% else %>
    <td class="font-weight-bold text-danger h5">退会</td>
    <% end %>
  </tr>
  <% end %>
</tbody>
</table>
</div>
</div>
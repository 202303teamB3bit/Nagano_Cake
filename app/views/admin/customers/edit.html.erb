<div class="container mt-5">
  <h3>
    <span style="background-color: #FAF0E6;"><%= @customer.full_name %>さんの会員情報編集画面</span>
  </h3>
  <%= form_with(model: @customer, url: admin_customer_path(@customer), method: :patch, local: true, class: "edit_customer") do |f| %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="customer_id">会員ID</label>
          <input type="text" class="form-control" id="customer_id" value="<%= @customer.id %>" readonly>
        </div>
        <div class="form-group">
          <label for="customer_name">氏名</label>
          <%= f.text_field :first_name, class: "form-control", placeholder: "姓" %>
          <%= f.text_field :last_name, class: "form-control mt-2", placeholder: "名" %>
        </div>
        <div class="form-group">
          <label for="customer_name_kana">フリガナ</label>
          <%= f.text_field :first_name_kana, class: "form-control", placeholder: "セイ" %>
          <%= f.text_field :last_name_kana, class: "form-control mt-2", placeholder: "メイ" %>
        </div>
        <div class="form-group">
          <label for="customer_post_code">郵便番号</label>
          <%= f.text_field :post_code, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="customer_address">住所</label>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="customer_phone_number">電話番号</label>
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="customer_email">メールアドレス</label>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="customer_is_deleted">会員ステータス</label>
          <%= f.select :is_deleted, [['有効', false], ['無効', true]], {selected: @customer.is_deleted}, {class: "form-control"} %>
        </div>
        <%= f.submit "更新する", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

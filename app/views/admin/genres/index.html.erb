<div class='container px-5 px-sm-0'>
<h4>ジャンル一覧・追加</h4>
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <%= f.label :name, 'ジャンル名' %>
    <%= f.text_field :name %>
    <%= f.submit "新規登録", class: "btn btn-outline-success" %>
<% end %>

  <div class='row'>
    <div class='col-md-4 pt-md-5'>
      <table class='table'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-outline-success" %>
              <%= link_to "削除", admin_genre_path(genre.id), method: :delete,
              data: { confirm: "本当に削除しますか？" }, class: "btn btn-outline-secondary ml-3" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @genres, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>